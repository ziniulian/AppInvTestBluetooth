<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <include layout="@layout/progress_bar_status" />

	<LinearLayout
	    android:orientation="vertical"
	    android:gravity="center_vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <LinearLayout 
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
		    android:layout_marginTop="15dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		    
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:text="@string/label_reader_configuration_time_synchronization_date" />
	
			<TextView
			    android:id="@+id/text_reader_configuration_time_synchronization_date"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:gravity="center"
			    android:hint="@string/hint_reader_configuration_time_synchronization_date_time"
			    android:layout_weight="1" />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
		    android:layout_marginTop="15dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		    
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:text="@string/label_reader_configuration_time_synchronization_time" />
			
			<TextView
			    android:id="@+id/text_reader_configuration_time_synchronization_time"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:gravity="center"
			    android:hint="@string/hint_reader_configuration_time_synchronization_date_time"
			    android:layout_weight="1" />
	    </LinearLayout>
		
	</LinearLayout>
</merge>