                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:background="#00626D"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="@string/image_connect_status_description"/>
    
    <LinearLayout
