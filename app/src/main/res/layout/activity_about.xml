    <TextView
        android:id="@+id/text_clicked"
		android:layout_marginTop="15dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:clickable="true"
	    android:text="@string/label_about_software_version_compony_detail" />
    
    <TextView
		android:layout_marginTop="15dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:text="@string/label_about_software_version_copyright_detail" />
    
