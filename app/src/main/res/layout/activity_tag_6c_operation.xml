<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
	    android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_label_tag_operation_tag_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/label_tag_operation_tag_data" />

        <TextView
            android:id="@+id/text_tag_operation_tag_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageView
        android:background="#00626D"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="@string/image_connect_status_description"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
	    android:gravity="center_vertical"
        android:text="@string/label_tag_operation_sub_title"/>

    <ImageView
        android:background="#00626D"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="@string/image_connect_status_description"/>
    
    <ListView
        android:id="@+id/list_tag_operation_detail"
        android:dividerHeight="3dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>