<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <include layout="@layout/progress_bar_status"/>
    
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbarThumbVertical="@drawable/scrollview_thumb_color" >
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
		
		    <include layout="@layout/layout_tag_operation_match_params"/>
		
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="15dp"
		        android:layout_marginLeft="5dp"
		        android:gravity="center_vertical" >
		
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="2"
		            android:text="@string/label_gb_operation_mode_configuration_password" />
		
		        <EditText
		            android:id="@+id/edit_gb_operation_mode_configuration_password"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="3.3"
		            android:background="@drawable/text_background"
		            android:ems="10"
		            android:gravity="center"
		            android:hint="@string/hint_gb_operation_mode_configuration_password"
	                android:inputType="textPassword"
	                android:digits="@string/hex_input_filter"
		            android:text="00000000" >
		
		            <requestFocus />
		        </EditText>
		
		        <ToggleButton
		            android:id="@+id/toggle_button_eye_visibility_gb_operation_mode_configuration_password"
		            android:layout_width="0dp"
		            android:layout_weight="0.7"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="5dp"
		            android:background="@drawable/button_visibility_background"
		            android:gravity="center"
		            android:minHeight="@null"
		            android:minWidth="@null"
		            android:text="@null"
		            android:textOff="@null"
		            android:textOn="@null" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="15dp"
		        android:layout_marginLeft="5dp"
		        android:gravity="center_vertical" >
		
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="2"
		            android:text="@string/label_gb_operation_mode_configuration_area" />
		
		        <Spinner
		            android:id="@+id/spinner_gb_operation_mode_configuration_area_id"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="5dp"
		            android:layout_weight="4"
		            android:background="@drawable/text_background"
		            android:gravity="center" />
			</LinearLayout>
			
			<LinearLayout
			        android:id="@+id/layout_gb_operation_mode_configuration_userdata_num"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="15dp"
			        android:layout_marginLeft="5dp"
			        android:visibility="gone"
			        android:gravity="center_vertical" >
			
			        <TextView
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="2"
			            android:text="@string/label_gb_operation_mode_configuration_userdata_num" />
			
			        <EditText
			            android:id="@+id/edit_gb_operation_mode_configuration_userdata_num"
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_marginRight="5dp"
			            android:layout_weight="4"
			            android:background="@drawable/text_background"
			            android:ems="10"
			            android:text="0"
			            android:gravity="center"
			            android:hint="@string/hint_gb_operation_mode_configuration_userdata_num"
			            android:inputType="number" >
			        </EditText>
			    </LinearLayout>			
	        <RadioGroup
		        android:layout_marginBottom="15dp"
		        android:layout_marginLeft="5dp"
	            android:orientation="horizontal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <RadioButton
	                android:id="@+id/radio_gb_operation_mode_configuration_lock_id"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:checked="true"
	                android:text="@string/label_radio_gb_operation_mode_configuration_lock" />
	
	            <RadioButton
	                android:id="@+id/radio_gb_operation_mode_configuration_safety_id"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/label_radio_gb_operation_mode_configuration_safety" />
	
	        </RadioGroup>
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="15dp"
		        android:layout_marginLeft="5dp"
		        android:gravity="center_vertical" >
		
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="2"
		            android:text="@string/label_gb_operation_mode_configuration_action" />
		
		        <Spinner
		            android:id="@+id/spinner_gb_operation_mode_configuration_action_id"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="5dp"
		            android:layout_weight="4"
		            android:background="@drawable/text_background"
		            android:gravity="center" />
		    </LinearLayout>
		</LinearLayout>
    </ScrollView>
</merge>